<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">
										  
	<context:component-scan base-package="cl.liberty.prodp.integ.service" >
		<context:include-filter type="regex" expression="services.*"/>
		<context:include-filter type="regex" expression="services.impl.*"/>
		<context:include-filter type="regex" expression="restclient.*"/>
		<context:include-filter type="regex" expression="validation.*"/>
		<context:include-filter type="regex" expression="helper.*"/>
		<context:include-filter type="regex" expression="utils.*"/>
		<context:include-filter type="regex" expression="oauth2cli.*"/>
	</context:component-scan>

</beans>